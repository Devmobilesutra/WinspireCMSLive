<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cms.callmanager.activities.CreateTransferOrderActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlItemField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/colorPink"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Number"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/inventory_dimention_title"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="5dp"

                    android:paddingTop="5dp"

                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvNumSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/ivNumArrow"
                    android:background="@drawable/circular_background"
                    android:paddingBottom="5dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:text="Select"
                    android:layout_marginEnd="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ivNumArrow"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="3"

                    >

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Docket No."

                            android:textColor="#000000"
                            android:padding="@dimen/dp_5"
                             android:textSize="@dimen/inventory_dimention"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"
                        />

                    <TableRow
                        android:id="@+id/tr_Docket"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="4"
                        >

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/tvDocketNo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp_5"
                                android:text=""
                                android:gravity="center_horizontal"
                                android:textColor="#000000"
                                 android:textSize="@dimen/inventory_dimention"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="3.5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/ivDocket"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_arrow_drop_down_red_24dp"
                                />
                        </LinearLayout>

                    </TableRow>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"
                        />
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    />
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="3"

                    >

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/dp_5"
                            android:text="Posting Date"

                            android:textColor="#000000"
                             android:textSize="@dimen/inventory_dimention"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"
                        />
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        >

                        <TextView
                            android:text=""
                            android:padding="@dimen/dp_5"
                            android:id="@+id/tvPocketDate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#000000"
                             android:textSize="@dimen/inventory_dimention"
                            android:gravity="center_vertical"
                            />


                        <ImageView
                            android:visibility="invisible"

                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toRightOf="@+id/itemQuantity1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_edit_black_24dp"
                            />


                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"
                        ></View>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    ></View>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="3"

                    >

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/dp_5"
                            android:text="Resource"

                            android:textColor="#000000"
                             android:textSize="@dimen/inventory_dimention"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"
                        ></View>

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="4"
                        >

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/tvResource"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp_5"
                                android:text=""
                                android:gravity="center_horizontal"
                                android:textColor="#000000"
                                 android:textSize="@dimen/inventory_dimention"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="3.5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:visibility="invisible"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_arrow_drop_down_red_24dp"
                                />
                        </LinearLayout>

                    </TableRow>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"
                        />
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    />
                <TableRow

                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="3"

                    >

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/dp_5"
                            android:text="Bank Docket No."
                            android:textColor="#000000"
                             android:textSize="@dimen/inventory_dimention"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"
                        />

                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:weightSum="4"
                        >

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/tvBankDocket"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp_5"
                                android:text=""
                                android:gravity="center_horizontal"
                                android:textColor="#000000"
                                 android:textSize="@dimen/inventory_dimention"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="3.5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:visibility="invisible"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_arrow_drop_down_red_24dp"
                                />
                        </LinearLayout>

                    </TableRow>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"
                        />
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlLines"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/colorPink"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lines"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/inventory_dimention_title"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"

                    android:paddingTop="5dp"
                    />


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llAddLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/ivLinesArrow"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="5dp"

                    android:paddingTop="5dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/circular_background"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_add_red_24dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Insert"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:textSize="14dp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/ivLinesArrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_5"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@color/colorPink"
                    />
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cancel"
                    android:background="@color/colorPink"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/dp_5"
                    />
               =
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</RelativeLayout>
